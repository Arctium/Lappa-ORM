<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <DebugType>Portable</DebugType>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <AssemblyName>Lappa.ORM</AssemblyName>
    <RootNamespace>Lappa.ORM</RootNamespace>
    <Version>1.0.1-dev1-4</Version>
    <Company>Arctium</Company>
    <Product>Lappa ORM</Product>
    <Description>Lappa ORM is a object relational mapper for .NET written in C# (.NET Standard) released under the MIT License.
Supported databases are MySQL/MSSQL/SQLite/PostgreSql.</Description>
    <Copyright>Copyright 2015-2018 Arctium</Copyright>
    <PackageProjectUrl>https://gitlab.com/Arctium/Lappa/ORM</PackageProjectUrl>
    <RepositoryUrl>https://gitlab.com/Arctium/Lappa/ORM</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageLicenseUrl>https://gitlab.com/Arctium/Lappa/ORM/blob/master/LICENSE</PackageLicenseUrl>
    <PackageTags>lappa-orm, orm, mysql, mssql, sqlite, postgre, sql</PackageTags>
    <PackageReleaseNotes>Updated package references.
Replace AssemblyLoader with Assembly.LoadFrom.
Added first xunit test.
Fixed https://github.com/Arctium-Software/LappaORM/issues/17
Fixed array properties.
Added basic transaction support.
useTransactions &amp; loadConnectorFromFile are required parameters now.</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Platforms>x64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="3.1.0" />
    <PackageReference Include="MySqlConnector" Version="0.61.0" />
    <PackageReference Include="Npgsql" Version="4.1.2" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.0" />
    <PackageReference Include="System.Text.Json" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\deps\src\Lappa.Pluralization\src\Lappa.Pluralization.csproj" PrivateAssets="All" />
  </ItemGroup>

</Project>
