<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <DebugType>Portable</DebugType>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <AssemblyName>Lappa.ORM</AssemblyName>
    <RootNamespace>Lappa.ORM</RootNamespace>
    <Version>1.0.0</Version>
    <Company>Arctium</Company>
    <Product>Lappa ORM</Product>
    <Description>Lappa ORM is a object relational mapper for .NET written in C#.
Supported databases are MySQL/MSSQL/SQLite/PostgreSql.</Description>
    <Copyright>Copyright Arctium</Copyright>
    <RepositoryUrl>https://github.com/Arctium/Lappa-ORM</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>lappa-orm, orm, mysql, mssql, sqlite, postgre, sql</PackageTags>
    <PackageReleaseNotes>Updated required framework to .NET 5.0</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Platforms>x64</Platforms>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="*" />
    <PackageReference Include="MySqlConnector" Version="*" />
    <PackageReference Include="Npgsql" Version="*" />
    <PackageReference Include="System.Data.SqlClient" Version="*" />
    <PackageReference Include="System.Text.Json" Version="*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\deps\src\Lappa.Pluralization\src\Lappa.Pluralization.csproj" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
