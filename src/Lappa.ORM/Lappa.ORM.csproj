<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <DebugType>Portable</DebugType>
        <LangVersion>preview</LangVersion>
        <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
        <AssemblyName>Lappa.ORM</AssemblyName>
        <RootNamespace>Lappa.ORM</RootNamespace>
        <Version>1.0.0</Version>
        <Company>Arctium</Company>
        <Product>Lappa ORM</Product>
        <Description>
            Lappa ORM is a object relational mapper for .NET written in C#.
            Supported databases are MySQL/MSSQL/SQLite/PostgreSql.
        </Description>
        <Copyright>Copyright Arctium</Copyright>
        <RepositoryUrl>https://github.com/Arctium/Lappa-ORM</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>lappa-orm, orm, mysql, mssql, sqlite, postgre, sql</PackageTags>
        <PackageReleaseNotes>Updated required framework to .NET 6.0</PackageReleaseNotes>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <Platforms>x64</Platforms>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Lappa.Pluralization" Version="1.1.0" />
        <PackageReference Include="Microsoft.Data.SqlClient" Version="4.1.0" />
        <PackageReference Include="Microsoft.Data.Sqlite" Version="6.0.2" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="6.0.0" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
        <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="6.0.0" />
        <PackageReference Include="MySqlConnector" Version="2.1.6" />
        <PackageReference Include="Npgsql" Version="6.0.3" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\LICENSE.md">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
    </ItemGroup>
</Project>
